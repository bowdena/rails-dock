# alias docked='docker run --rm -it -v ${PWD}:/rails -v ruby-bundle-cache:/bundle -p 3000:3000 ghcr.io/rails/cli'
alias docked='docker run -e RAILS_ENV=test -e DATABASE_HOST=host.docker.internal --rm -it -v ${PWD}:/rails -v ruby-bundle-cache:/bundle -p 3000:3000 my-docked-override'
alias drails='docked rails'
alias drails-dev='docked bin/dev'
alias dbundle='docked bundle'
alias dyarn='docked yarn'
alias drake='docked rake'
alias dgem='docked gem'

# Setup a testing environment for testing
alias docked-test='docker run -e DOCKER_TEST=true -e RAILS_ENV=test -e DATABASE_HOST=host.docker.internal --rm -it -v ${PWD}:/rails -v ruby-bundle-cache:/bundle -p 3001:3001 my-docked-override'
alias docked-test-firefox='docker run -e BROWSER=firefox -e DOCKER_TEST=true -e RAILS_ENV=test -e DATABASE_HOST=host.docker.internal --rm -it -v ${PWD}:/rails -v ruby-bundle-cache:/bundle -p 3001:3001 my-docked-override'
alias dsystemtest='docked-test rails test:system'
alias dsystemtest-firefox='docked-test-firefox rails test:system'
alias dtest='docked-test rails test'

